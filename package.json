{
  "name": "sheet-manager-nodejs",
  "version": "0.0.1",
  "main": "server.js",
  "scripts": {
    "build": "tsup src --out-dir build",
    "start:dev": "tsx watch src/server.ts",
    "start": "node build/server.js",
    "prisma:client": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "test": "vitest run --config vitest.unit.config.mts",
    "test:watch": "vitest run --config vitest.unit.config.mts --watch",
    "test:integration": "vitest run --config vitest.integration.config.mts",
    "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "npm link vitest-environment-prisma",
    "pretest:e2e": "npm run test:create-prisma-environment && npm run test:install-prisma-environment",
    "test:e2e": "vitest run --config vitest.e2e.config.mts",
    "test:e2e:watch": "vitest watch --config vitest.e2e.config.mts",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "nodejs",
    "fastify",
    "prisma",
    "typescript",
    "jwt",
    "bcryptjs",
    "zod",
    "rpg",
    "sheets"
  ],
  "author": "Paulo Valleriote",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/cookie": "11.0.1",
    "@fastify/jwt": "9.0.1",
    "@fastify/redis": "7.0.1",
    "@prisma/client": "5.22.0",
    "bcryptjs": "2.4.3",
    "dotenv": "16.4.5",
    "fastify": "5.1.0",
    "nodemailer": "6.9.16",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bcryptjs": "2.4.6",
    "@types/node": "22.9.0",
    "@types/nodemailer": "6.4.17",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-v8": "2.1.5",
    "prisma": "5.22.0",
    "supertest": "7.0.0",
    "tsup": "8.3.5",
    "tsx": "4.19.2",
    "typescript": "5.6.3",
    "vite-tsconfig-paths": "5.1.2",
    "vitest": "2.1.5"
  }
}
